# Template file for 'palemoon'
pkgname=palemoon
version=33.9.0
revision=1
archs="x86_64"
short_desc="Open Source, Goanna-based web browser"
maintainer="Sofiya <Sofiya@void.org>"
license="MPL-2.0"
homepage="https://www.palemoon.org/"
changelog="https://www.palemoon.org/releasenotes.shtml"
distfiles="https://repo.palemoon.org/MoonchildProductions/Pale-Moon/archive/Pale-Moon-${version}_Release.tar.gz"
checksum=8461f8ee840c5584975eb1cc67b312587dc3f82aaf99b84518c92892f26652cf
nopie=yes

do_install() {
	vmkdir opt/palemoon
	vcopy "*" opt/palemoon/
	# Create symlink in path
	vmkdir usr/bin
	ln -s /opt/palemoon/palemoon "${DESTDIR}/usr/bin/palemoon"
	 # Copy icon and .desktop file
	vmkdir usr/share/icons
	cp "${DESTDIR}/opt/palemoon/browser/icons/mozicon128.png" \
"${DESTDIR}/usr/share/icons/palemoon.png"
	vmkdir usr/share/applications
	cp "${FILESDIR}/palemoon.desktop" "${DESTDIR}/usr/share/applications/"

}
