# Template file for 'smartgit'
pkgname=smartgit
version=24.1.5
revision=1
_tarver=24_1_5
archs="x86_64"
depends="git git-lfs"
short_desc="Graphical Git client"
maintainer="mobinmob <mobinmob@disroot.org>"
license="custom:proprietary"
homepage="https://www.syntevo.com/smartgit/"
changelog="https://www.syntevo.com/smartgit/changelog.txt"

_baseUrl="https://download.smartgit.dev/smartgit"
_filename="smartgit-${_tarver}.deb"
_smartgitUrl="${_baseUrl}/${_filename}"

distfiles="$_smartgitUrl"
checksum=ec1aaa99b7e4ed8652a395c9c0aef6bbd6b028886c780a400a1c45110be42b74
nopie=yes
python_version=3

do_extract() {
	mkdir -p ${DESTDIR}
	ar x ${XBPS_SRCDISTDIR}/smartgit-${_tarver}/${_filename}

}

do_install() {
	tar xf data.tar.xz -C ${DESTDIR}

}
