# Template file for 'github-desktop'
pkgname=github-desktop
version=${VERSION}
revision=1
_channel=linux1
archs="x86_64"
short_desc="Simple collaboration from your desktop"
maintainer="Sofiya <Sofiya@void.org>"
license="MPL-2.0"
homepage="https://github.com/shiftkey/desktop"
changelog="https://github.com/shiftkey/desktop/releases/latest${version}/?update"
distfiles="https://github.com/shiftkey/desktop/releases/latest/download/GitHubDesktop-linux-amd64-${version}-${_channel}.deb"
checksum=${SHA256}
nopie=yes

do_extract() {
	mkdir -p ${DESTDIR}
	ar x ${XBPS_SRCDISTDIR}/GitHubDesktop-linux-amd64-${version}-linux1.deb
}

do_install() {
	tar xf data.tar.gz -C ${DESTDIR}

}
